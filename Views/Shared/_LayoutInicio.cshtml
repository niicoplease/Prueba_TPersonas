<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Nuevo T-Personas</title>

    <!--Estilos-->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/sidebar.css" />
    <link rel="stylesheet" href="~/css/Sitio-Contenido.css"/>
    <link rel="stylesheet" href="~/css/cards.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <!-- Scrollbar Custom CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/malihu-custom-scrollbar-plugin/3.1.5/jquery.mCustomScrollbar.min.css">


    <!--Scripts-->
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
    <!-- jQuery Custom Scroller CDN -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/malihu-custom-scrollbar-plugin/3.1.5/jquery.mCustomScrollbar.concat.min.js"></script>

    <script>
        $(document).ready(function () {
            $("#menu").mCustomScrollbar({
                theme: "minimal"
            });

            $('#sidebarCollapse').on('click', function () {
                // open or close navbar
                $('#sidebar-container').toggleClass('active');
                // close dropdowns
                $('.collapse.in').toggleClass('in');
                // and also adjust aria-expanded attributes we use for the open/closed arrows
                // in our CSS
                $('a[aria-expanded=true]').attr('aria-expanded', 'false');
            });

        });
    </script>
</head>
<body>
    <div class="d-flex">
        <div id="sidebar-container" class="bg-azul">
            <div class="logo">
                <h4 class="text-light font-weight-bold">T-Personas</h4>
            </div>
            <div id="menu" class="menu">
                <a href="#" class="d-block p-3 text-light"><i class="fa fa-circle-thin" aria-hidden="true"></i> Inicio</a>
                <a href="#btnCertificados" data-toggle="collapse" aria-expanded="false" class="d-block p-3 text-light dropdown-toggle"><i class="fa fa-certificate" aria-hidden="true"></i> Certificados</a>
                <ul class="collapse list-unstyled" id="btnCertificados">
                    <li>
                        <a href="#"><i class="fa fa-chevron-right" aria-hidden="true"></i> Certificado de Antigüedad</a>
                    </li>
                    <li>
                        <a href="#"><i class="fa fa-chevron-right" aria-hidden="true"></i> Certificado de Antigüedad con Rentas</a>
                    </li>
                    <li>
                        <a href="#"><i class="fa fa-chevron-right" aria-hidden="true"></i> Certificado de Rentas</a>
                    </li>
                </ul>

                <a href="#btnModuloTiempo" data-toggle="collapse" aria-expanded="false" class="d-block p-3 text-light dropdown-toggle"><i class="fa fa-clock-o" aria-hidden="true"></i> Modulo de Tiempo</a>
                <ul class="collapse list-unstyled" id="btnModuloTiempo">
                    <li>
                        <a href="#"><i class="fa fa-chevron-right" aria-hidden="true"></i> Cuenta Corriente Vacaciones</a>
                    </li>
                    <li>
                        <a href="#"><i class="fa fa-chevron-right" aria-hidden="true"></i> Permisos</a>
                    </li>
                    <li>
                        <a href="#"><i class="fa fa-chevron-right" aria-hidden="true"></i> Sistema de Asistencia</a>
                    </li>
                    <li>
                        <a href="#"><i class="fa fa-chevron-right" aria-hidden="true"></i> Solicitud de Vacaciones</a>
                    </li>
                </ul>

                <a href="#btnRemuneraciones" data-toggle="collapse" aria-expanded="false" class="d-block p-3 text-light dropdown-toggle"><i class="fa fa-money" aria-hidden="true"></i> Remuneraciones</a>
                <ul class="collapse list-unstyled" id="btnRemuneraciones">
                    <li>
                        <a href="#"><i class="fa fa-chevron-right" aria-hidden="true"></i> Liquidación Previa</a>
                    </li>
                    <li>
                        <a href="#"><i class="fa fa-chevron-right" aria-hidden="true"></i> Liquidaciones de Sueldo</a>
                    </li>
                    <li>
                        <a href="#"><i class="fa fa-chevron-right" aria-hidden="true"></i> Préstamos</a>
                    </li>
                </ul>
                <a href="#" class="d-block p-3 text-light"><i class="fa fa-file-o" aria-hidden="true"></i> Beca de Escolaridad</a>
                <a href="#" class="d-block p-3 text-light"><i class="fa fa-file-o" aria-hidden="true"></i> Beca Mérito</a>
                <a href="#" class="d-block p-3 text-light"><i class="fa fa-info" aria-hidden="true"></i> Datos de Contacto</a>
            </div>
        </div>
        <div class="w-100">
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="container">
                    <button type="button" id="sidebarCollapse" class="btn btn-info">
                        <i class="fa fa-bars" aria-hidden="true"></i>
                    </button>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav ml-auto">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <img src="~/img/img-user.png" class="img-fluid rounded-circle avatar mr-2" />
                                    Usuario
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <a class="dropdown-item" href="#"><i class="fa fa-sign-out" aria-hidden="true"></i> Cerrar Sesión</a>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
                @RenderBody()
        </div>
    </div>
</body>
</html>

